                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/selectBatsman"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        app:helperTextEnabled="false"
                        app:hintEnabled="false">

                        <AutoCompleteTextView
                            android:id="@+id/batsman_selection2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:inputType="none"
                            android:padding="0dp"
                            android:text="batsman" />


                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="55dp"
                        android:layout_height="match_parent"
                        android:text="@{Integer.toString(viewModel.nonStrikerScore.run)}"
                        android:textAlignment="center"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:text="@{Integer.toString(viewModel.nonStrikerScore.ballFaced)}"
                        android:textAlignment="center"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="46dp"
                        android:layout_height="match_parent"
                        android:text="@{Integer.toString(viewModel.nonStrikerScore.fours)}"
                        android:textAlignment="center"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="42dp"
                        android:layout_height="match_parent"
                        android:text="@{Integer.toString(viewModel.nonStrikerScore.sixes)}"
                        android:textAlignment="center"
                        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                </LinearLayout>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="142dp" />

                <Button
                    android:id="@+id/rotate_strike"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                    android:layout_width="135dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:onClick="@{()-> viewModel.changeStrike()}"
                    android:text="Rotate Strike"
                    android:textStyle="bold"
                    app:iconTint="#009688"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    android:backgroundTint="@color/buttons"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />




            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/themeB2"
            app:cardElevation="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView3">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="215dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintGuide_begin="63dp"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/button1"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginStart="16dp"
                    android:onClick="@{()-> viewModel.updateScore(1)}"
                    app:icon="@drawable/baseline_looks_one_24"
                    app:iconTint="#009688"
                    app:layout_constraintBottom_toTopOf="@+id/guideline2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#4CAF50"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/button2"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                    android:layout_width="44dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="8dp"
                    android:onClick="@{()-> viewModel.updateScore(2)}"
                    android:textSize="30sp"
                    app:icon="@drawable/baseline_looks_two_24"
                    app:iconTint="#009688"
                    app:layout_constraintBottom_toTopOf="@+id/guideline2"
                    app:layout_constraintStart_toEndOf="@+id/button1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#009688"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/button3"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                    android:layout_width="44dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:onClick="@{()-> viewModel.updateScore(3)}"
                    app:icon="@drawable/baseline_looks_3_24"
                    app:layout_constraintBottom_toTopOf="@+id/guideline2"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintStart_toEndOf="@+id/button2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#009688"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/button4"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginStart="16dp"
                    android:onClick="@{()-> viewModel.updateScore(4)}"
                    app:icon="@drawable/baseline_looks_4_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline2"
                    app:strokeColor="#009688"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/button6"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                    android:layout_width="44dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="8dp"
                    android:onClick="@{()-> viewModel.updateScore(6)}"
                    app:icon="@drawable/baseline_looks_6_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/button4"
                    app:layout_constraintTop_toTopOf="@+id/guideline2"
                    app:strokeColor="#009688"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/buttonUndo"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                    android:layout_width="46dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:onClick="@{()-> viewModel.changeStrike()}"
                    app:icon="@drawable/outline_undo_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintStart_toEndOf="@+id/button6"
                    app:layout_constraintTop_toTopOf="@+id/guideline2"
                    app:strokeColor="#009688"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/popup_nb"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/buttons"
                    android:text="@string/nb"
                    android:textColor="#0D736A"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/guideline2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/popup_lb"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/buttons"
