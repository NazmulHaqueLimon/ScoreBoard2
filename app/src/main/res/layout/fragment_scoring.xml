<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.example.scoreboard.data.objects.Team"/>
        <import type="com.example.scoreboard.data.objects.Match"/>
        <import type="com.example.scoreboard.data.objects.Player"/>
        <import type="com.example.scoreboard.data.objects.TeamWithPlayers"/>
        <variable
            name="viewModel"
            type="com.example.scoreboard.viewmodels.ScoringViewModel" />
    </data>


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/themeB2">

          <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:context=".fragments.ScoringFragment">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="50dp"
                android:backgroundTint="@color/themeB2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleText">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="29dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="44dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_group" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:hint="@string/team_name"
                        android:textAlignment="center"
                        android:text="@{viewModel.battingTeamWithPlayers.team.name.toString()}"
                        android:textColor="#0A6E64"
                        android:textColorHint="#0B7168"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageView2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/score"
                        android:textColor="#0A6860"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/imageView2"
                        app:layout_constraintStart_toStartOf="@+id/imageView2"
                        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:text="@string/over"
                        android:textColor="#0A675E"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/textView20"
                        app:layout_constraintStart_toStartOf="@+id/textView20"
                        app:layout_constraintTop_toBottomOf="@id/textView20" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:hint="@string/total_score"
                        android:text="@{Integer.toString(viewModel.battingTeamScore.totalRun)}"
                        android:textAlignment="center"
                        android:textColorHint="#0B7168"
                        android:textStyle="bold"

                        app:layout_constraintBottom_toBottomOf="@+id/textView20"
                        app:layout_constraintEnd_toEndOf="@+id/textView18"
                        app:layout_constraintHorizontal_bias="0.496"
                        app:layout_constraintStart_toStartOf="@+id/textView18"
                        app:layout_constraintTop_toBottomOf="@+id/imageView2"
                        app:layout_constraintVertical_bias="1.0"
                        tools:text="156/8" />

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:hint="@string/over_played"
                        android:text="@{Integer.toString(viewModel.battingTeamScore.ballPlayed)}"
                        android:textAlignment="center"
                        android:textColor="#171616"
                        android:textColorHint="#0B7168"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/textView22"
                        app:layout_constraintStart_toStartOf="@+id/textView22"
                        tools:text="12.5" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView2"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/purple_200"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialCardView">

                <androidx.recyclerview.widget.RecyclerView
                     android:layout_height="match_parent"
                     android:layout_width="match_parent"
                     android:orientation="horizontal"
                    android:layout_margin="2dp"
                     tools:listitem="@layout/last_score"/>


            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/themeB2"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialCardView2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="215dp">

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="135dp"
                            android:layout_height="match_parent"
                            android:text="@string/batsman"
                            android:textAlignment="center"
                            android:textColor="#087168"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="55dp"
                            android:layout_height="match_parent"
                            android:text="@string/r"
                            android:textAlignment="center"
                            android:textColor="#096A61"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="44dp"
                            android:layout_height="match_parent"
                            android:text="@string/b"
                            android:textAlignment="center"
                            android:textColor="#0A756B"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="46dp"
                            android:layout_height="match_parent"
                            android:text="@string/_4_s"
                            android:textAlignment="center"
                            android:textColor="#0A7369"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="42dp"
                            android:layout_height="match_parent"
                            android:text="@string/_6_s"
                            android:textAlignment="center"
                            android:textColor="#0A7C71"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@{viewModel.batsmanAOnStrike ? @color/teal_200 : @color/themeB2}"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/selectBatsman1"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            app:helperTextEnabled="false"
                            app:hintEnabled="false">
                            <AutoCompleteTextView
                                android:id="@+id/batsman_selection1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="true"
                                android:inputType="none"
                                android:padding="0dp"
                                android:text="batsman" />


                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="55dp"
                            android:layout_height="match_parent"
                            android:text="@{Integer.toString(viewModel.batsmanAScore.totalRun)}"
                            android:textAlignment="center"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="44dp"
                            android:layout_height="match_parent"
                            android:text="@{Integer.toString(viewModel.batsmanAScore.ballFaced)}"
                            android:textAlignment="center"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="46dp"
                            android:layout_height="match_parent"
                            android:text="@{Integer.toString(viewModel.batsmanAScore.fours)}"
                            android:textAlignment="center"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="42dp"
                            android:layout_height="match_parent"
                            android:text="@{Integer.toString(viewModel.batsmanAScore.sixes)}"
                            android:textAlignment="center"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@{viewModel.batsmanAOnStrike ? @color/themeB2 : @color/teal_200 }"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/selectBatsman"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            app:helperTextEnabled="false"
                            app:hintEnabled="false">

                            <AutoCompleteTextView
                                android:id="@+id/batsman_selection2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="true"
                                android:inputType="none"
                                android:padding="0dp"
                                android:text="batsman" />


                        </com.google.android.material.textfield.TextInputLayout>


                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="55dp"
                            android:layout_height="match_parent"
                            android:text="@{Integer.toString(viewModel.batsmanBScore.totalRun)}"
                            android:textAlignment="center"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="44dp"
                            android:layout_height="match_parent"
                            android:text="@{Integer.toString(viewModel.batsmanBScore.ballFaced)}"
                            android:textAlignment="center"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="46dp"
                            android:layout_height="match_parent"
                            android:text="@{Integer.toString(viewModel.batsmanBScore.fours)}"
                            android:textAlignment="center"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="42dp"
                            android:layout_height="match_parent"
                            android:text="@{Integer.toString(viewModel.batsmanBScore.sixes)}"
                            android:textAlignment="center"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                    </LinearLayout>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="142dp" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/themeB2"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialCardView3">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="215dp">

                    <Button
                        android:id="@+id/rotate_strike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:backgroundTint="@color/themeA1"
                        android:onClick="@{()-> viewModel.changeStrike()}"
                        android:text="Undo "
                        android:textAlignment="center"
                        android:textColor="#167168"
                        android:textSize="14sp"
                        android:textStyle="bold"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/popup_bye"
                        app:layout_constraintStart_toStartOf="@+id/guideline3"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <Button
                        android:id="@+id/button1"
                        style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        android:onClick="@{()-> viewModel.updateScore(1)}"
                        app:icon="@drawable/baseline_looks_one_24"
                        app:iconTint="#009688"
                        app:layout_constraintBottom_toTopOf="@+id/button3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:strokeColor="#4CAF50"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <Button
                        android:id="@+id/button2"
                        style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        android:onClick="@{()-> viewModel.updateScore(2)}"
                        android:textSize="30sp"
                        app:icon="@drawable/baseline_looks_two_24"
                        app:iconTint="#009688"
                        app:layout_constraintBottom_toTopOf="@+id/button4"
                        app:layout_constraintStart_toEndOf="@+id/button1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:strokeColor="#009688"
                        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/button3"
                        style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="4dp"
                        android:onClick="@{()-> viewModel.updateScore(3)}"
                        app:icon="@drawable/baseline_looks_3_24"
                        app:layout_constraintBottom_toTopOf="@+id/button6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:strokeColor="#009688"
                        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/button4"
                        style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="4dp"
                        android:onClick="@{()-> viewModel.updateScore(4)}"
                        app:icon="@drawable/baseline_looks_4_24"
                        app:layout_constraintBottom_toTopOf="@+id/buttonUndo"
                        app:layout_constraintStart_toEndOf="@+id/button3"
                        app:strokeColor="#009688"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <Button
                        android:id="@+id/button6"
                        style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="4dp"
                        android:onClick="@{()-> viewModel.updateScore(6)}"
                        app:icon="@drawable/baseline_looks_6_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:strokeColor="#009688"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <Button
                        android:id="@+id/buttonUndo"
                        style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="4dp"
                        android:onClick="@{()-> viewModel.changeStrike()}"
                        app:icon="@drawable/outline_loop_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/button6"
                        app:strokeColor="#009688"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <Button
                        android:id="@+id/popup_nb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="@color/themeA1"
                        android:text="@string/nb"
                        android:textColor="#0D736A"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/popup_lb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="@color/themeA1"
                        android:text="@string/lb"
                        android:textColor="#0F7168"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/popup_nb"
                        app:layout_constraintStart_toStartOf="@+id/guideline3"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/popup_wide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@color/themeA1"
                        android:padding="0dp"
                        android:text="@string/wide"
                        android:textColor="#0B786E"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/rotate_strike"
                        app:layout_constraintStart_toStartOf="@+id/guideline3"
                        app:layout_constraintTop_toBottomOf="@+id/popup_lb" />

                    <Button
                        android:id="@+id/popup_bye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="4dp"
                        android:backgroundTint="@color/themeA1"
                        android:padding="0dp"
                        android:text="@string/byeRun"
                        android:textColor="#0B786E"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <Button
                        android:id="@+id/popup_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="@color/themeA1"
                        android:padding="0dp"
                        android:text="@string/out"
                        android:textColor="#0B8075"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/popup_bye"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/popup_wide"
                        app:layout_constraintTop_toBottomOf="@+id/popup_nb" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="136dp" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

              <com.google.android.material.card.MaterialCardView
                  android:id="@+id/materialCardView5"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="16dp"
                  android:layout_marginEnd="8dp"
                  android:layout_marginBottom="24dp"
                  android:backgroundTint="@color/themeB2"
                  app:cardElevation="6dp"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/materialCardView4">

                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      tools:layout_editor_absoluteY="215dp">

                      <LinearLayout
                          android:id="@+id/linearLayoutB1"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="8dp"
                          android:layout_marginTop="8dp"
                          app:layout_constraintEnd_toEndOf="parent"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toTopOf="parent">

                          <TextView
                              android:id="@+id/textViewB1"
                              android:layout_width="115dp"
                              android:layout_height="match_parent"
                              android:text="@string/bowler"
                              android:textAlignment="center"
                              android:textColor="#08675E"
                              android:textSize="16sp"
                              android:textStyle="bold" />

                          <TextView
                              android:id="@+id/textViewB2"
                              android:layout_width="55dp"
                              android:layout_height="match_parent"
                              android:text="@string/over"
                              android:textAlignment="center"
                              android:textColor="#0A6C63"
                              android:textSize="16sp"
                              android:textStyle="bold" />

                          <TextView
                              android:id="@+id/textViewB4"
                              android:layout_width="51dp"
                              android:layout_height="match_parent"
                              android:text="R"
                              android:textAlignment="center"
                              android:textColor="#0A7369"
                              android:textSize="16sp"
                              android:textStyle="bold" />

                          <TextView
                              android:id="@+id/textViewB5"
                              android:layout_width="57dp"
                              android:layout_height="match_parent"
                              android:text="wickt"
                              android:textAlignment="center"
                              android:textColor="#0A6E64"
                              android:textSize="16sp"
                              android:textStyle="bold" />

                          <TextView
                              android:id="@+id/textViewB6"
                              android:layout_width="59dp"
                              android:layout_height="match_parent"
                              android:text="Econ"
                              android:textAlignment="center"
                              android:textColor="#097369"
                              android:textStyle="bold" />

                      </LinearLayout>


                      <LinearLayout
                          android:id="@+id/linearLayoutB2"
                          android:layout_width="wrap_content"
                          android:layout_height="35dp"
                          android:layout_marginStart="8dp"
                          android:layout_marginTop="4dp"
                          android:layout_marginBottom="8dp"
                          app:layout_constraintBottom_toBottomOf="parent"
                          app:layout_constraintEnd_toEndOf="parent"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toBottomOf="@+id/linearLayoutB1">

                          <com.google.android.material.textfield.TextInputLayout
                              android:id="@+id/bowlers"
                              style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:padding="0dp"
                              app:helperTextEnabled="false"
                              app:hintEnabled="false">

                              <AutoCompleteTextView
                                  android:id="@+id/bowler_selection"
                                  android:layout_width="115dp"
                                  android:layout_height="wrap_content"
                                  android:focusable="true"
                                  android:inputType="none"
                                  android:padding="0dp"
                                  android:text="select"
                                  tools:ignore="TouchTargetSizeCheck" />

                          </com.google.android.material.textfield.TextInputLayout>

                          <TextView
                              android:id="@+id/bowler_over"
                              android:layout_width="55dp"
                              android:layout_height="match_parent"
                              android:text="@{Integer.toString(viewModel.bowlersScore.overBowled)}"
                              android:textAlignment="center"
                              tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                          <TextView
                              android:id="@+id/bowler_run"
                              android:layout_width="51dp"
                              android:layout_height="match_parent"
                              android:text="@{Integer.toString(viewModel.bowlersScore.runGiven)}"
                              android:textAlignment="center"
                              tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                          <TextView
                              android:id="@+id/bowler_wicket"
                              android:layout_width="57dp"
                              android:layout_height="match_parent"
                              android:text="@{Integer.toString(viewModel.bowlersScore.wicketTaken)}"
                              android:textAlignment="center"
                              tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                          <TextView
                              android:id="@+id/bowler_econ"
                              android:layout_width="59dp"
                              android:layout_height="match_parent"
                              android:text="0"
                              android:textAlignment="center" />

                      </LinearLayout>

                  </androidx.constraintlayout.widget.ConstraintLayout>

              </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/titleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@{viewModel.scoringTitleText}"
                android:textAlignment="center"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

</layout>
