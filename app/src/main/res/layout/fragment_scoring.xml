                        android:textColor="#0A7369"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="42dp"
                        android:layout_height="match_parent"
                        android:text="@string/_6_s"
